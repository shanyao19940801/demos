<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="connection.url">jdbc:oracle:thin:@//localhost:1521/day001</property>
        <property name="connection.pool.size">10</property>
        <property name="statement_cache.size">25</property>
        <property name="jdbc.fetch_size">50</property>
        <property name="jdbc.batch_size">30</property>
        <property name="connection.username">shanyao</property>
        <property name="connection.password">shanyao</property>
        <property name="current_session_context_class">thread</property>

        <property name="show_sql">true</property>

        <!-- Mapping files -->
        <!--<mapping class="com.hibernate.sy.StudentEntity"/>-->
        <mapping resource="com/hibernate/sy/StudentEntity.hbm.xml"/>
        <mapping resource="com/hibernate/sy/TeacherEntity.hbm.xml"/>
        <mapping class="com.hibernate.sy.TeacherEntity"/>
        <mapping resource="com/hibernate/sy/ManEntity.hbm.xml"/>
        <mapping class="com.hibernate.sy.ManEntity"/>

    </session-factory>

</hibernate-configuration>